<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/loAlertHeader"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAlertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="13dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:text="分享到"/>

        <TextView
            android:id="@+id/tvAlertMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/alertview_marginBottom_actionsheet_msg"
            android:gravity="center"
            android:textColor="@color/alertview_textColor_actionsheet_msg"
            android:textSize="@dimen/alertview_textSize_actionsheet_msg" />

        <GridView
            android:id="@+id/gvAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:numColumns="4"
            android:horizontalSpacing="10dp">
        </GridView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/alertview_size_divier"
        android:background="#e0e0e0"/>

    <TextView
        android:id="@+id/tvAlertCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alertview_height_alert_button"
        android:gravity="center"
        android:clickable="true"
        android:textColor="#333333"
        android:textSize="@dimen/alertview_textSize_alert_button"
        android:text="取消"/>
</LinearLayout>